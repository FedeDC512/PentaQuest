{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "paths": {
    "@components*": [ "src/components/*" ],
    "@game*": [ "src/game/*" ]
  },
  "include": [
    "src",
    "**/*",
    "node_modules/phaser3-rex-plugins-types"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
